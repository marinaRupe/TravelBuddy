@model TravelBuddy.WebApp.Models.TravelViewModels.EditTravelViewModel

@{
    ViewData["Title"] = "Uredi putovanje";
}

<h2>@ViewData["Title"]</h2>

<h4>Uredi podatke o putovanju.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateStart" class="control-label"></label>
                <input asp-for="DateStart" class="form-control" />
                <span asp-validation-for="DateStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateEnd" class="control-label"></label>
                <input asp-for="DateEnd" class="form-control" />
                <span asp-validation-for="DateEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BudgetValue" class="control-label"></label>
                <input asp-for="BudgetValue" class="form-control" />
                <span asp-validation-for="BudgetValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BudgetCurrencyId" class="control-label"></label>
                <select asp-for="BudgetCurrencyId" asp-items="@(new SelectList(Model.CurrencyOptions,"Id","Shortcut"))">
                    <option>---</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Spremi" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
